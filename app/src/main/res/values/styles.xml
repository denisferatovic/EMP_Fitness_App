<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FitnessEMP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/ldark</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowActionBar">@color/white</item>
        <item name="windowNoTitle">@color/white</item>
        <item name="drawerArrowStyle">@style/Theme.FitnessEMP.DrawerIcon</item>

    </style>
    <style name="Theme.FitnessEMP.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/ldark</item>
        <item name="colorPrimary">@color/ldark</item>
        <item name="colorAccent">@color/ldark</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowActionBar">@color/white</item>
        <item name="windowNoTitle">@color/white</item>
        <item name="drawerArrowStyle">@style/Theme.FitnessEMP.DrawerIcon</item>

    </style>
    <style name="Theme.FitnessEMP.DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <!-- Primary brand color. -->
        <item name="color">@color/hamburger</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>